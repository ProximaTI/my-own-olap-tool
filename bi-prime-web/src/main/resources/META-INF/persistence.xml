<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>br.com.bi.model.entity.metadata.Cube</class>
        <class>br.com.bi.model.entity.metadata.CubeLevel</class>
        <class>br.com.bi.model.entity.metadata.Dimension</class>
        <class>br.com.bi.model.entity.metadata.Filter</class>
        <class>br.com.bi.model.entity.metadata.Level</class>
        <class>br.com.bi.model.entity.metadata.Measure</class>
        <class>br.com.bi.model.entity.metadata.Property</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bi" />
            <property name="javax.persistence.jdbc.user" value="bi" />
            <property name="javax.persistence.jdbc.password" value="bi" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
        </properties>
    </persistence-unit>
</persistence>
