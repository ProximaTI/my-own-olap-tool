<query>           ::= "SELECT" <y-axis> "," <x-axis> "FROM" <cube> "WHERE" <query-filter>

####################
#       Axis       #
####################

<y-axis>          ::= <node-expression>
<x-axis>          ::= <node-expression>

####################
# Nodes expression #
####################

<node-expression> := <leftno> <right-node>
<right-node>      := "," <left-node> <right-node>
<right-node>      := Empty
<left-node>       ::= <cube-metadata-node>
<left-node>       ::= <cross-join>

####################
# Nodes themselves #
####################

<cube-metadata-node> ::= <level>
<cube-metadata-node> ::= <cube-filter>
<cube-metadata-node> ::= <measure>
<cross-join>         ::= "(" <node-expression> "," <node-expression> ")"
<level>              ::= "[" <string> "]" "." "[" <string> "]"
<cube-filter>        ::= "[" <string> "]"
<measure>            ::= "[" <string> "]"

####################
#       Cube       #
####################

<cube>               ::= "[" <string> "]"

#####################
# Filter expression #
#####################

<query-filter>        ::= <left-expression> <right-expression>
<right-expression>    ::= <disjunction> <right-expression>
<right-expression>    ::= <conjuntion> <right-expression>
<right-expression>    ::= <negation> <right-expression>
<right-expression>    ::= Empty
<disjunction>         ::= "OU" <left-expression>
<conjunction>         ::= "E" <left-expression>
<negation>            ::= "NÃO" <left-expression>
<left-expression>     ::= <comparison>
<comparison>          ::= <level> "." <level-property> <operator> <operating>
<comparison>          ::= <measure> <comparison-operator> <operating>
<comparison>          :: <cube-filter>    # um filtro de consulta pode ser determinado por um filtro de cubo
<level-property>      ::= "[" <string> "]"
<comparison-operator> ::= '=' | '>' | '<' | '>=' | '<='
<operating>           ::= <date>
<operating>           ::= <string>
<operating>           ::= <number>
<operating>           ::= <arithmetic-expression> # TODO uma expressão aritmética poderá ter uma métrica em sua composição
<number>              ::= <integer>
<number>              ::= <double>
